<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlsTest.Views.DaycardEntryView"
             xmlns:controls="clr-namespace:ControlsTest.Controls">
    <ContentView.Content>
        <StackLayout Orientation="Horizontal" HeightRequest="50" BackgroundColor="White">
           <Label Text="Default name" TextColor="Gray" VerticalOptions="Center" HorizontalOptions="Start" Margin="10"/>
           <controls:EntryWithoutBorder x:Name="MainEntry" WidthRequest="150" HeightRequest="50" HorizontalTextAlignment="End" VerticalOptions="Center" HorizontalOptions="EndAndExpand" Margin="10" FontAttributes="Bold"/>
        </StackLayout>  
    </ContentView.Content>
</ContentView>
